<controls:Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DiffKeep.ViewModels"
        xmlns:views="clr-namespace:DiffKeep.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:DiffKeep.Converters"
        xmlns:toasts="clr-namespace:ShadUI.Toasts;assembly=ShadUI"
        xmlns:controls="clr-namespace:ShadUI.Controls;assembly=ShadUI"
        xmlns:converters1="clr-namespace:ShadUI.Demo.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DiffKeep.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/diffkeep.ico"
        IsMenuVisible="True"
        Margin="0"
        Title="DiffKeep">
    <Window.Resources>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter" />
    </Window.Resources>
    <controls:Window.MenuItems>
        <MenuItem Header="File">
            <MenuItem
                Click="ShowSettingsDialog"
                Header="Settings">
                <MenuItem.Icon>
                    <LucideIcon VerticalAlignment="Center"  Kind="Settings" Size="18"></LucideIcon>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Click="Exit"
                Header="Exit">
                <MenuItem.Icon>
                    <LucideIcon Kind="DoorOpen" Size="20"></LucideIcon>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
        <MenuItem Header="Help">
            <MenuItem
                Header="About"
                Click="ShowAboutDialog" />
        </MenuItem>
    </controls:Window.MenuItems>
    <controls:Window.RightWindowTitleBarControls>
        <Button
            Width="30"
            Height="30"
            Background="{DynamicResource SidebarBackgroundColor}"
            Click="SendFeedback"
            CornerRadius="{DynamicResource MdCornerRadius}"
            ToolTip.Tip="Send Feedback">
            <LucideIcon Kind="MessageCircle" />
        </Button>
        <Button
            Width="30"
            Height="30"
            Background="{DynamicResource SidebarBackgroundColor}"
            Command="{Binding SwitchThemeCommand}"
            CornerRadius="{DynamicResource MdCornerRadius}"
            ToolTip.Tip="Switch Theme">
            <LucideIcon Kind="{Binding CurrentTheme, Converter={x:Static converters1:ThemeModeConverters.ToLucideIcon}}" />
        </Button>
    </controls:Window.RightWindowTitleBarControls>

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*">
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                    MaxWidth="{Binding LeftPanelMaxWidth}"
                    MinWidth="{Binding LeftPanelMinWidth}"/>
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel -->
            <views:LeftPanel Grid.Column="0" DataContext="{Binding LeftPanel}"/>

            <GridSplitter 
                Grid.Column="1"
                Background="#66808080"
                Width="3"
                IsVisible="{Binding IsLeftPanelOpen}"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                ResizeBehavior="PreviousAndNext" />
        
            <!-- Toggle Button can be positioned absolutely -->
            <Button
                Grid.Column="1"
                Width="24"
                Height="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ZIndex="1"
                Command="{Binding ToggleLeftPanelCommand}">
                <PathIcon
                    Data="{Binding IsLeftPanelOpen,
            Converter={StaticResource BoolToStringConverter},
            ConverterParameter=M9 19l-7-7 7-7,
            FallbackValue=M15 19l7-7-7-7}"
                    Height="16"
                    Width="16" />
            </Button>

            <!-- Main content area -->
            <ContentControl Grid.Column="2">
                <views:ImageGalleryView DataContext="{Binding ImageGallery}" />
            </ContentControl>
        </Grid>
        <toasts:ToastHost Grid.Row="0"
                          Manager="{Binding ToastManager}"
                          Position="BottomRight"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ZIndex="1000" />
    </Grid>
</controls:Window>